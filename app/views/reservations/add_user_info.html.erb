<h1>Rezervare: introdu datele tale</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@user, url: reservationnew_path) do |f| %>
	  <%= f.label :nume %>
      <%= f.text_field :nume, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= hidden_field_tag "reservation_rf_id", @running_film_id %>
      <%= hidden_field_tag "reservation_seats", @seats %>
      <%= f.submit "Rezerva" %>
  <% end %>
  </div>
</div>