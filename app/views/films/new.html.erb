<h1>Films#new</h1>

<h1>Add new film</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@film, url: newfilm_path) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.submit "Add Film", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>